<div class="padding-top-20 light-red-background">
  <div class="container">
    <div class="cards">
      <% @articles.each do |article| %>
        <div class="each-card">
          <%= link_to article_path(article) do %>
            <%= image_tag(article.image, class:"card-category center-image") %>
            <h2><%= article.title %></h2>
            <p class="limit-text"><%= article.description %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= link_to 'new', new_article_path %>
  </div>
</div>


