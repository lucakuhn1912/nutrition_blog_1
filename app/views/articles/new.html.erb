<div class="light-red-background">

  <div class="container">

    <h1>Articles#new</h1>
    <%= simple_form_for @article do |f| %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :image, as: :file %>
    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
    <% end %>
  </div>
</div>
